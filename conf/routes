# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Notified on SMS received 
# Sently
GET		/sms/received/sently		controllers.Sms.receivedSently(from ?= null, text ?= null)
# Nexmo
GET		/sms/received/nexmo			controllers.Sms.receivedNexmo(msisdn ?= null, to ?= null, text ?= null)
HEAD	/sms/received/nexmo			controllers.Sms.receivedNexmoHead
# Hoiio
GET		/sms/received				controllers.Sms.received(from ?= null, to ?= null, msg ?= null)
POST	/sms/received				controllers.Sms.received(from ?= null, to ?= null, msg ?= null)

